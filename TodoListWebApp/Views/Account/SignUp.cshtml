@model TodoListWebApp.Models.Tenant

@{
    ViewBag.Title = "Sign Up";
}

<h2>Sign Up</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tenant</h4>
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
                <p>This is where you would collect information about the party signing up for the app.</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AdminConsented, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdminConsented)
                @Html.ValidationMessageFor(model => model.AdminConsented)
                <p>Check this box if you are an administrator and want to sign-up for all of your employees.</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SignUp" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>